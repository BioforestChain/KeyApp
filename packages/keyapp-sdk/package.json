{
  "name": "@biochain/keyapp-sdk",
  "private": true,
  "version": "0.1.0",
  "description": "KeyApp 小程序 SDK - 应用上下文 API",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
