  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "react": "^19.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.0"
  }
