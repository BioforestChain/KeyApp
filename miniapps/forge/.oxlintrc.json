{
  "$schema": "https://raw.githubusercontent.com/oxc-project/oxc/main/npm/oxlint/configuration_schema.json",
  "plugins": ["react", "typescript"],
  "categories": {
    "correctness": "warn",
    "suspicious": "warn",
    "pedantic": "off",
    "perf": "warn",
    "style": "off"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "warn",
    "eqeqeq": "error",
    "no-var": "error",
    "prefer-const": "warn",
    "react/react-in-jsx-scope": "off",
    "react/jsx-key": "error",
    "react/no-direct-mutation-state": "error",
    "typescript/no-explicit-any": "error"
  },
  "ignorePatterns": [
    "node_modules",
    "dist",
    "*.config.ts",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
